PROJECT_NAME="FastAPI SQLite App"
VERSION="1.0.0"
API_V1_STR="/api/v1"
DATABASE_URL="sqlite:///./app.db"
SQLITE_POOL_SIZE=20
SQLITE_MAX_OVERFLOW=0
SQLITE_POOL_TIMEOUT=30
SQLITE_POOL_RECYCLE=3600

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://www.mestermind.com,https://mestermind.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend URL (for redirects, emails, etc.)
FRONTEND_URL=http://localhost:3000

# Email Configuration
POSTMARK_API_KEY=your_postmark_api_key_here
POSTMARK_FROM_EMAIL=noreply@yourdomain.com
SITE_URL=https://yourdomain.com
